<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/bar_color</item>
        <item name="android:windowBackground">@color/window_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>

    </style>

    <style name="ActivityStyle" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_act</item>
        <item name="colorPrimaryDark">@color/primary_dark_act</item>
        <item name="colorAccent">@color/accent_act</item>
        <item name="android:navigationBarColor">@color/bar_color_act</item>
        <item name="android:windowBackground">@color/window_color_act</item>
        <item name="android:textColorPrimary">@color/text_color_act</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
    </style>
    <style name="miEstiloTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fd0005</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>